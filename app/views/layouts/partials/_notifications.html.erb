<!-- Menu toggle button -->
<a href="#" class="dropdown-toggle text-center" data-toggle="dropdown">
    <span>
    <i class="fa fa-bell" aria-hidden="true"></i><%= t(:notifications) %>
    </span>
    <span class="label notifications">
    <%= unread_notification %>
    </span>
</a>

<ul class="dropdown-menu">
    <li class="header">
        <b><%= t(:notifications) %></b>
    </li>

    <li>
        <!-- Inner Menu: contains the notifications -->
        <div class="slimScrollDiv">
            <ul class="menu">

                <% unless @notification.blank? %>
                    <% @notification.each do |n| %>
                        <li class="new"><!-- start notification -->
                            <%= link_to(read_notification_path(id: n.id)) do %>

                                <span>
                                    <b><%= user_instead(n.sender_id).profile.full_name.capitalize %></b>
                                </span> 
                                <span>
                                    <%= n.content %>     
                                </span>
                                <br />
                                <small>
                                    <%= time_ago_in_words(n.created_at) %> 
                                </small>
                            <% end %>
                        </li><!-- end notification -->
                    <% end %>

                    <% else %>

                    <li class="new"><!-- start notification -->
                        <div class="no-notification">
                            <div class="col-sm-12"><i>Aucune notification!</i></div>
                        </div>
                    </li><!-- end notification -->

                <% end %>  

            </ul><!-- end notification -->
        </div>
    </li>
</ul><!-- end notification -->