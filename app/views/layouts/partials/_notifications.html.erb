<!-- Menu toggle button -->
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
        <span class="label label-success"><%= unread_notification %></span>
      </a>
      <ul class="dropdown-menu">
        <li class="header"><b>Notifications</b></li>

        <li>
          <!-- Inner Menu: contains the notifications -->
          <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 230px;">
            <ul class="menu" style="overflow: hidden; width: 100%; height: 230px;">

              <% if !@notification.empty? %>
                    <% @notification.each do |n| %>
                        <li class="new"><!-- start notification -->
                          <%= link_to(read_notification_path(ref: n.id)) do %>
                              
                               <span><b><%= project_user(n.sender_id).capitalize %></b></span> 
                               <span><%= n.content %></span>
                            <br>
                            <small class="time"><i class="fa fa-clock-o"></i> <%= time_ago_in_words(n.created_at) %> </small>
                          <% end %>
                        </li><!-- end notification -->
                    <% end %>
              <% else %>
                  
                    <li class="new"><!-- start notification -->
                        <div class="no-notification">
                          <div class="col-sm-12"><i>Aucune notification!</i></div>
                        </div>
                    </li><!-- end notification -->

              <% end %>  

          </ul><!-- end notification -->
      </ul><!-- end notification -->