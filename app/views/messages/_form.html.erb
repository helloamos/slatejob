<%= form_with(model: message, local: false) do |form| %>

    <div class="modal-body">
      

        <div class="form-group">
            <%= form.hidden_field :recipient_id, value: params[:to] unless params[:to].blank? %>
        </div>

        <div class="form-group">
            <%= form.text_area :content, id: :bid_content, rows: 6, class: "form-control", placeholder: t(:your_message), required: true %>
        </div>

    </div>

    <div class="modal-footer">
        <%= form.button t(:send) , class: "btn btn-primary",  data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Encours..."} %>
        <%= link_to "Annuler", "#", class: "btn", data: {dismiss: "modal"} %>
     </div>
       
 
 <% end %>

