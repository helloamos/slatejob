              <% else %>
              <% @certifications.each do |certification| %>

                  <ul>
                    <li class="resume_section-content_item" data-role="item" id="employment-4741">
                      <div class="resume_section-content_title">
                        <%= certification.title %>
                      </div>
                      <div class="resume_section-content_range">
                        <span class=start_period>
                        <span><%= l(certification.date_of_obtaining, format: '%Y') %></span>
                          
                          
                        </span>
              
                        

                      </div>
                      <div class="muted">
                        
                        <%= certification.description %> -
                         <%= certification.country %>
                      </div>
                   
                    <% if is_current_user?(current_user) %>
                      <div class="actions_buttons">
                      <%= link_to raw('<i class="fa fa-pencil-square-o" aria-hidden="true"></i>'),edit_certification_path(certification), remote: true , "data-toggle"=>"tooltip", "data-placement"=>"top", title:"Modifier"%>
                      <%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"></i>'), certification_delete_path(certification),:remote => true, class: "red_text" , "data-toggle"=>"tooltip", "data-placement"=>"top", title:"Supprimer"%>
                      </div> 
                    <% end %>
                  </li>
                  <%= do_separator(certification, @certifications) %>
                  </ul>
                   
                <% end %>
                <% end %>