<!-- Hero section -->
<section class="hero-wrapper">

	<div class="hero-content">
		<div class="container text-center">
			<h1 class="hero-title">
				Embaucher des freelances et trouver des emplois freelances en ligne.
			</h1>
			<div class="hero-subtitle">
				<!-- Des milliers de petites entreprises et particuliers donnent vie à leurs projets. -->
				Connectez-vous aux meilleurs entreprises et trouver des emplois des grandes entreprises, PME et organisations à travers le monde.
			</div>
			<div class="hero-button">
				<%= link_to "COMMENCER", new_user_registration_path, class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</section>
<!-- End hero section -->

<!-- Steps section -->
<section class="steps section">


			<h2 class="section-title  text-center both-padding-3">Les 4 étapes pour changer de vie</h2>
	<div class="container padding-top-30">

		<div class="col-md-3 step-box">
			<div class="step-icon-box text-center">
				<div class="shape">
					<%= image_tag('steps/svg/businessman.svg') %>
				</div>
			</div>

			<div class="step-title-box text-center">
				Inscrivez-vous
			</div>
			<div class="step-body text-center">
				Créer et compléter votre profil et CV en quelques minutes.
			</div>
		</div>


		<div class="col-md-3 step-box">
			<div class="step-icon-box text-center">
				<div class="shape">
				<%= image_tag('steps/svg/job-search.svg') %>
			</div>
			</div>

			<div class="step-title-box text-center">
				Trouvez des emplois 
			</div>

			<div class="step-body text-center">
				Rechercher les emplois relatives à vos compétences et préférences.
			</div>
		</div>


		<div class="col-md-3 step-box">
			<div class="step-icon-box text-center">
				<div class="shape">
			<%= image_tag('steps/svg/promotion.svg') %>
		</div>
			</div>
			<div class="step-title-box text-center">
				Faire des offres
			</div>
			<div class="step-body text-center">
				Commencer par faire des offres pour tenter votre chance.
			</div>
		</div>

		<div class="col-md-3 step-box">
			<div class="step-icon-box text-center">
				<div class="shape">
				<%= image_tag('steps/svg/meeting.svg') %>
			</div>
			</div>
			<div class="step-title-box text-center">
				Être embaucher
			</div>
			<div class="step-body text-center">
				Discuter, négocier et embaucher le meilleurs talents.
			</div>
		</div>


	</div>


      
</section>

